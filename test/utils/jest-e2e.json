{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "extensionsToTreatAsEsm": [".ts"],
  "transform": {
    "^.+\\.(t|j)s$": [
      "@swc/jest",
      {
        "module": {
          "type": "commonjs",
          "strict": true,
          "noInterop": true
        },
        "jsc": {
          "parser": {
            "syntax": "typescript",
            "decorators": true
          },
          "transform": {
            "legacyDecorator": true,
            "decoratorMetadata": true
          },
          "keepClassNames": true
        }
      }
    ]
  }
}
