{
  "moduleFileExtensions": ["ts", "js"],
  "rootDir": ".",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)sx?$": [
      "@swc/jest",
      {
        "module": {
          "type": "commonjs",
          "strict": true,
          "noInterop": true
        },
        "jsc": {
          "parser": {
            "syntax": "typescript",
            "decorators": true
          },
          "transform": {
            "legacyDecorator": true,
            "decoratorMetadata": true
          },
          "keepClassNames": true
        }
      }
    ]
  },
  "collectCoverageFrom": [
    "**/*.{!(module),}.(t)s",
    "!<rootDir>/**/*.interface.ts",
    "!<rootDir>/**/*.interface.ts",
    "!<rootDir>/**/*.dto.ts",
    "!<rootDir>/**/*.schema.ts",
    "!<rootDir>/**/*.mock.ts"
  ],
  "coveragePathIgnorePatterns": ["<rootDir>/dist/"],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node"
}
